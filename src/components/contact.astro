                        required
                    />
                </div>

                <div>
                    <label
                        for="email"
                        class="block text-sm font-bold text-[#093C63]"
                        >Correo</label
                    >
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="tu@correo.com"
                        class="w-full p-3 rounded-lg border border-gray-300 focus:ring-2 focus:ring-[#E8782F]"
